@model OnlineBanking.Models.CustomerDetailsModel

@{
    ViewBag.Title = "CustomerRegistrationForm";
}

<h2>New Customer Registration</h2>


@using (Html.BeginForm("Register", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.UserName)
        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Gender)&nbsp;&nbsp;&nbsp;&nbsp;
        @Html.RadioButtonFor(m => m.Gender, "Male")@Html.Label("Male")&nbsp;&nbsp;&nbsp;
        @Html.RadioButtonFor(m => m.Gender, "Female")@Html.Label("Female")&nbsp;&nbsp;&nbsp;
        @Html.RadioButtonFor(m => m.Gender, "Others")@Html.Label("Others")&nbsp;&nbsp;&nbsp;
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DOB)
        @Html.TextBoxFor(m => m.DOB, new { type = "date", @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.AddressLine)
        @Html.TextBoxFor(m => m.AddressLine, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.City)
        @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.State)
        @Html.TextBoxFor(m => m.State, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Country)
        @Html.TextBoxFor(m => m.Country, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Pincode)
        @Html.TextBoxFor(m => m.Pincode, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.PrimaryPhoneNumber)
        @Html.TextBoxFor(m => m.PrimaryPhoneNumber, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.AccountNumber)
        @Html.TextBoxFor(m => m.AccountNumber, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.BalanceAvailable)
        @Html.TextBoxFor(m => m.BalanceAvailable, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.UserID)
        @Html.TextBoxFor(m => m.UserID, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password)
        @Html.TextBoxFor(m => m.Password, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <div class="col-lg-offset-1">
            <input type="reset" value="Reset" class="btn btn-default" style="width:90px" />
            <input type="submit" value="Register" class="btn btn-default" style="width:90px" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Home", "AdminHomePage")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
