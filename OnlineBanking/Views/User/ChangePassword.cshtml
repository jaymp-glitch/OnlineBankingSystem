@model OnlineBanking.Models.ChangePassword

@{
    ViewBag.Title = "ChangePassword";
}

<h2>ChangePassword</h2>

<html>
<body>

    @using (Html.BeginForm())
    {
        <br />
        <br />
        <div>
            <table class="center">
                <tr>
                    <td>Old Password</td>
                    <td>
                        @Html.EditorFor(model => model.CurrentPassword)
                    </td>
                    <td>@Html.ValidationMessageFor(model => model.CurrentPassword)</td>
                </tr>
                <tr class="rowspace">
                    <td>New Password</td>

                    <td>
                        @Html.EditorFor(pass => pass.NewPassword)
                    </td>
                    <td>@Html.ValidationMessageFor(pass => pass.NewPassword)</td>
                </tr>

                <tr class="rowspace">
                    <td colspan="3" id="button">
                        <input type="submit" value="Change Password" />
                    </td>
                </tr>
                <tr class="rowspace"><td colspan="3">@ViewBag.Message</td></tr>
            </table>
        </div>
    }
</body>
</html>
